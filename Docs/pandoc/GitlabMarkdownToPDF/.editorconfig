# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = false

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
charset = utf-8

[*.sconsider]
indent_style = space
indent_size = 4
charset = utf-8

[*.sh]
indent_style = tab
indent_size = 4
charset = utf-8

[*.{yml,yaml},Dockerfile,tox.ini]
indent_style = space
indent_size = 2

# c/c++ settings
[*.{c,cpp,h,hpp,ipp}]
indent_style = tab
indent_size = 4
charset = utf-8

# 2 space indentation
[PKGBUILD]
indent_style = space
indent_size = 2
charset = utf-8
